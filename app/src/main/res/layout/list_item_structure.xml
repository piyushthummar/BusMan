<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/s_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="students's name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/s_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student's ID" />


        <TextView
            android:id="@+id/s_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student's mobile_no" />

        <TextView
            android:id="@+id/s_p_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student's Pickup Point" />

        <TextView
            android:id="@+id/s_fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student's fees" />

        <TextView
            android:id="@+id/s_paid_fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student's paid fees" />

        <TextView
            android:id="@+id/s_fees_taken_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student's paid fees " />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>